<% provide(:title, 'Все пользователи') %>
<h1>Все пользователи</h1>
<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
    | <%= link_to "удалить", user, method: :delete,
                                  data: { confirm: "Вы уверены, что хотите удалить?" } %>
  <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>